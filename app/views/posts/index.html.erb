<% unless @posts.empty? %>
  <% @posts.each do |post| %>
    <div class='post-card'>
      <h1 class='post-title'><%= post.title %></h1>
      <% if signed_in? %>
        <p>Author: <%= post.user.username %></p>
      <% else %>
        <p>Author: Anonymous</p>
      <% end %>
      <%= link_to 'Show Post', post %>
    </div>
  <% end %>
<% else %>
  <h1>Sorry No Posts!</h1>
<% end %>

<br><%= link_to 'New Post', new_post_path %>
